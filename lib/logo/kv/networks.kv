#:import Networks logo.baseclass.networks.Networks


<NetworkListItem>:
    divider: "Inset"
    ImageLeftWidget:
        source: root.source
    LIconRightCheckbox:
        id: checkbox
        group: "network"
        active: root.selected
        on_active:
            root.selected = self.active
            root.selection()


<LogoSearch>:
    orientation: "vertical"
    spacing: dp(10)

    LogoRecycleView:
        id: content
        viewclass: "NetworkListItem"
        key_size: "height"

        RecycleBoxLayout:
            default_size: None, dp(48)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: "vertical"


<Networks>:
    name: "networks"
    on_pre_enter: root.list_networks()
    BoxLayout:
        orientation: "vertical"
        LToolbar:
            title: strings.TEXT_SECTION_NETWORKS
            id: toolbar
            left_action_items: [["menu", lambda x: root.nav_drawer.set_state("open")]]
        LogoSearch:
            id: network