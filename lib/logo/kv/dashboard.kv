#:import Dashboard logo.baseclass.dashboard.Dashboard

<Dashboard>:
    name: "dashboard"
    # Try to move Toolbar to <Section> and add this BoxLayout as a spacer.
    # BoxLayout:
    #    orientation: "vertical"
    #    size_hint_y: None
    #    height: root.parent.toolbar.height
    BoxLayout:
        orientation: "vertical"
        LToolbar:
            title: strings.TEXT_APP_NAME
            id: toolbar
            left_action_items: [["menu", lambda x: root.nav_drawer.set_state("open")]]
        ScrollView:
            do_scroll_x: False