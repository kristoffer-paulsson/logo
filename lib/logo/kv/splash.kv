#:import environ os.environ
#:import Splash logo.baseclass.splash.Splash

<Splash>:

    BoxLayout:
        orientation: "vertical"
        size_hint: .75, .75
        size_hint_min: dp(400), dp(100)
        pos_hint: {"center_y": .618, "center_x": .5}

        Image:
            id: logo_icon
            keep_ratio: True
            allow_stretch: True
            source: f"{environ['LOGO_MESSENGER_ASSETS']}/images/logotype-light.png"
            canvas:
                Color:
                    rgba: app.theme_cls.primary_color
                Line:
                    width: min(self.width, self.height) * .0145
                    points: [self.width * .490, self.center_y, self.width * (.490 + (1.09 - .491) * root.progress / 1000), self.center_y]
