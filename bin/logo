"""Entry point."""
import os
import sys

sys.path.append(os.path.join(os.path.abspath(os.curdir), "lib"))

import pyximport # noqa E402
pyximport.install()

from logo.boot import start  # noqa E402
from logo.main import LogoMessenger  # noqa E402


if __name__ in ('__main__'):
    start()
    LogoMessenger().run()
